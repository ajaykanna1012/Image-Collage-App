<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/non"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/white"
    tools:context=".PostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold" android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:hint="90 charactor"
            android:text="Title" />

        <EditText
            android:id="@+id/title_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:hint="90 charactors"
            android:paddingLeft="2sp"
            />

        <TextView
            android:id="@+id/dec_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginTop="5dp" android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/dec_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" android:textColor="@color/black"
            android:textSize="16dp"
            android:hint="200 Characters"
            android:paddingLeft="3sp"/>

        <TextView
            android:id="@+id/img_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Image" android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <ImageView
            android:id="@+id/imqe_1"
            android:visibility="visible"
            android:elevation="3dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:background="@drawable/up"
            android:scaleType="centerCrop"
            android:layout_height="310dp"
            />
        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:layout_weight="2"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="195dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_launcher_background" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="195dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="visible"
                app:srcCompat="@drawable/btn_bg" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/layout_3"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="300dp">

            <ImageView
                android:id="@+id/image_3_1"
                android:layout_width="195dp"
                android:layout_height="match_parent"

                android:scaleType="centerCrop"
                 />
                <LinearLayout
                     android:layout_width="195dp"
                        android:layout_height="match_parent"
                    android:layout_marginStart="195dp"
                    android:orientation="vertical">
            <ImageView
                android:id="@+id/image_3_2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                />

            <ImageView
                android:id="@+id/image_3_3"
                android:layout_width="match_parent"
                android:layout_height="150dp"

                android:scaleType="centerCrop"
                />
             </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_4"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="300dp">
<LinearLayout
    android:layout_width="195dp"
    android:layout_height="match_parent"
    android:orientation="vertical">
            <ImageView
                android:id="@+id/image_4_1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
              />

            <ImageView
                android:id="@+id/image_4_2"
                android:layout_width="match_parent"
                android:scaleType="centerCrop" android:layout_height="150dp"
               />
</LinearLayout>

            <LinearLayout
                android:layout_width="195dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_4_3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/image_4_4"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"

                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_5"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/image_5_1"
                    android:scaleType="centerCrop" android:layout_width="match_parent"
                    android:layout_height="180dp"
                    />

                <ImageView
                    android:id="@+id/image_5_2"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_5_3"
                    android:scaleType="centerCrop"   android:layout_width="match_parent"
                    android:layout_height="120dp"/>

                <ImageView
                    android:id="@+id/image_5_5"
                    android:scaleType="centerCrop"  android:layout_width="match_parent"
                    android:layout_height="120dp" />


                <ImageView
                    android:id="@+id/image_5_4"
                    android:scaleType="centerCrop"  android:layout_width="match_parent"
                    android:layout_height="120dp"

                    />


            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_6"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/image_6_1"
                    android:scaleType="centerCrop"  android:layout_width="match_parent"
                    android:layout_height="100dp"
                    />

                <ImageView
                    android:id="@+id/image_6_2"
                    android:scaleType="centerCrop" android:layout_width="match_parent"
                    android:layout_height="100dp"
                    />

                <ImageView
                    android:id="@+id/image_6_3"
                    android:scaleType="centerCrop" android:layout_width="match_parent"
                    android:layout_height="100dp"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_6_5"
                    android:scaleType="centerCrop" android:layout_width="match_parent"
                    android:layout_height="100dp" />

                <ImageView
                    android:id="@+id/image_6_6"
                    android:scaleType="centerCrop" android:layout_width="match_parent"
                    android:layout_height="100dp" />

                <ImageView
                    android:id="@+id/image_6_4"
                    android:scaleType="centerCrop" android:layout_width="match_parent"
                    android:layout_height="100dp"

                    />


            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_7"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/image_7_1"
                    android:scaleType="centerCrop"   android:layout_width="match_parent"
                    android:layout_height="100dp"
                    />

                <ImageView
                    android:id="@+id/image_7_2"
                    android:scaleType="centerCrop" android:layout_width="match_parent"
                    android:layout_height="100dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_7_3"
                    android:scaleType="centerCrop" android:layout_width="match_parent"
                    android:layout_height="100dp" />

                <ImageView
                    android:id="@+id/image_7_4"
                    android:scaleType="centerCrop" android:layout_width="match_parent"
                    android:layout_height="100dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginTop="200dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image_7_5"
                    android:scaleType="centerCrop" android:layout_width="130dp"
                    android:layout_height="100dp" />
                <ImageView
                    android:id="@+id/image_7_6"
                    android:scaleType="centerCrop" android:layout_width="130dp"
                    android:layout_height="100dp" />
                <ImageView
                    android:id="@+id/image_7_7"
                    android:scaleType="centerCrop" android:layout_width="130dp"
                    android:layout_height="100dp" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_8"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/image_8_1"
                    android:scaleType="centerCrop" android:layout_width="match_parent"
                    android:layout_height="167dp"
                    />

                <ImageView
                    android:id="@+id/image_8_2"
                    android:scaleType="centerCrop" android:layout_width="match_parent"
                    android:layout_height="167dp"
                    />

                <ImageView
                    android:id="@+id/image_8_3"
                    android:scaleType="centerCrop" android:layout_width="match_parent"
                    android:layout_height="166dp"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:orientation="vertical">

                <ImageView
                    android:scaleType="centerCrop"  android:id="@+id/image_8_5"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />

                <ImageView
                    android:id="@+id/image_8_6"
                    android:scaleType="centerCrop"  android:layout_width="match_parent"
                    android:layout_height="100dp" />

                <ImageView
                    android:id="@+id/image_8_7"
                    android:scaleType="centerCrop"  android:layout_width="match_parent"
                    android:layout_height="100dp"

                    />

                <ImageView
                    android:id="@+id/image_8_8"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"  android:layout_height="100dp"

                    />
                <ImageView
                    android:id="@+id/image_8_4"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"  android:layout_height="100dp"

                    />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_9"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/image_9_1"
                    android:scaleType="centerCrop" android:layout_width="match_parent"
                    android:layout_height="86dp"
                    />

                <ImageView
                    android:id="@+id/image_9_2"
                    android:scaleType="centerCrop" android:layout_width="match_parent"
                    android:layout_height="100dp"
                    />

                <ImageView
                    android:id="@+id/image_9_3"
                    android:scaleType="centerCrop" android:layout_width="match_parent"
                    android:layout_height="100dp"

                    />

                <ImageView
                    android:id="@+id/image_9_4"
                    android:scaleType="centerCrop"  android:layout_width="match_parent"
                    android:layout_height="100dp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:orientation="vertical">

                <ImageView
                    android:scaleType="centerCrop"  android:id="@+id/image_9_5"
                    android:layout_width="match_parent"
                    android:layout_height="86dp" />

                <ImageView
                    android:id="@+id/image_9_6"
                    android:scaleType="centerCrop"  android:layout_width="match_parent"
                    android:layout_height="100dp" />

                <ImageView
                    android:id="@+id/image_9_7"
                    android:scaleType="centerCrop"  android:layout_width="match_parent"
                    android:layout_height="100dp"

                    />
                <LinearLayout
                android:layout_width="195dp"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_9_8"
                    android:layout_width="97.5dp"
                    android:scaleType="centerCrop"  android:layout_height="100dp"

                    />
                <ImageView
                    android:id="@+id/image_9_9"
                    android:layout_width="97.5dp"
                    android:scaleType="centerCrop"  android:layout_height="100dp"

                    />
            </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Agree"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/link"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_marginStart="3dp"
                android:textStyle="bold"
                android:textColor="#0C2AE8"
                android:text="Terms &amp; Condition"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/post"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Post"
                android:textStyle="bold"
                android:background="@drawable/btn_bg"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancel"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textStyle="bold"
                android:background="@drawable/btn_bg"
                android:layout_marginStart="60dp"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>